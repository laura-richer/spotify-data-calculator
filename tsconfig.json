{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
	},
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "jest/config/jest-setup.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
